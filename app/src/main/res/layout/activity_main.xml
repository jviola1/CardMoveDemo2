<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jay.cardmovedemo2.MainActivity">

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/pile1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:background="#b6b0b0" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/pile2"
        android:background="#b6b0b0"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_alignTop="@+id/pile1"
        android:layout_toRightOf="@+id/pile1"
        android:layout_toEndOf="@+id/pile1" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/pile3"
        android:background="#b6b0b0"
        android:layout_alignTop="@+id/pile2"
        android:layout_toRightOf="@+id/pile2"
        android:layout_toEndOf="@+id/pile2"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/pile4"
        android:background="#b6b0b0"
        android:layout_alignTop="@+id/pile3"
        android:layout_toRightOf="@+id/pile3"
        android:layout_toEndOf="@+id/pile3"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/card1"
        android:background="#42de23"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/pile2"
        android:layout_alignStart="@+id/pile2"
        android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha"
        android:adjustViewBounds="false" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/card2"
        android:background="#25e01b"
        android:layout_alignLeft="@+id/pile3"
        android:layout_alignStart="@+id/pile3"
        android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
        android:layout_alignBottom="@+id/card1" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/card3"
        android:background="#25e01b"
        android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
        android:layout_below="@+id/card1"
        android:layout_toRightOf="@+id/pile1"
        android:layout_toEndOf="@+id/pile1"
        android:layout_marginTop="46dp" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/card4"
        android:background="#25e01b"
        android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
        android:layout_alignTop="@+id/card3"
        android:layout_alignRight="@+id/pile4"
        android:layout_alignEnd="@+id/pile4" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/card5"
        android:background="#25e01b"
        android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
        android:layout_above="@+id/card1"
        android:layout_alignLeft="@+id/card3"
        android:layout_alignStart="@+id/card3" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/card6"
        android:background="#42de23"
        android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha"
        android:layout_below="@+id/card3"
        android:layout_toLeftOf="@+id/card2"
        android:layout_toStartOf="@+id/card2" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/card7"
        android:background="#42de23"
        android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha"
        android:layout_below="@+id/card6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/card8"
        android:background="#42de23"
        android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha"
        android:layout_alignTop="@+id/card7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></FrameLayout>
</RelativeLayout>
